/* Parameterized Constructor : 
   	This constructor has areuments. 
	Arguments are called as parameters.
	When the object is begin created, then we pass the values 
	These value will be used for creating objects  */
#include <iostream>
using namespace std;
class Sample
{
	private:
		int x,y;
		float z;
	public:
		Sample(int a, float b, int c)
		{
			x=a;
			z=b;
			y=c;			
			cout<<"\n Object is created using parameterized constructor";
		}
		void show()
		{
			cout<<"\n x is "<<x<<"\n y is "<<y<<"\n z is "<<z;
		}
};
int main()
{
	Sample obj1(100, 95.5, 30), obj2(5, 9.5, 4);
	obj1.show();
	obj2.show();
}

